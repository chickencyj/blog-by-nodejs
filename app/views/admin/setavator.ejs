<%- include ../common/header %>
<section>
  <div class="blog_wrapper blog_wrap_indeximg">
    <div class="clearfix container">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
          <h1 class="header_title"><%= title %></h1>
        </div>
      </div>
    </div>
  </div>
</section>
<article class="row blog_mt30">
	<div class="blog_dn upload_info alert alert-danger"></div>
	<div class="setting_left col-lg-2 col-md-2 col-sm-3 col-xs-4">
		<ul class="blog_p0">
			<li>
				<a href="/admin/user/setprofile">个人资料</a>
			</li>
			<li class="blog_active">
				<a href="/admin/user/setavator">头像设置</a>
			</li>
			<li >
				<a href="/admin/user/resetpwd">修改密码</a>
			</li>
		</ul>
	</div>
	<div class="setting_right col-lg-8 col-lg-offset-1 col-md-8 col-md-offset-1 col-sm-7 col-sm-offset-1 col-xs-7 col-xs-offset-1">
		<div  id="upload_img" type='display:none;'>
				<div> 
					<% if (User.avator) { %>
						<img  class="col-lg-4 col-lg-offset-2 col-md-4 col-md-offset-2 col-sm-12  col-xs-12 " src="/upload/<%= user.avator %>" />
					<% } else { %>
						<img  class="col-lg-4 col-lg-offset-2 col-md-4 col-md-offset-2 col-sm-8 col-sm-offset-1 col-xs-12 " src="<%= User.head %>" />
					<% } %>
					<div class="progress col-lg-4 col-lg-offset-0 col-md-4 ">
					  <div class="progress-bar blog_w0" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">
					    <span class="sr-only">0% Complete</span>
					  </div>
					</div>
				</div>
			<div class="avator_btn_wrap col-lg-4 col-lg-offset-0 col-md-4 ">
				<div class="avator_btn">
					<input id="img" type="file"  value="" multiple accept />
					<input class="btn btn-default" value="上传头像" />
				</div>
			</div>
		</div>
	</div>
</article>
<script src="//cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
<script src="//cdn.bootcss.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script type="text/javascript" src="/assets/upload.js" charset="utf-8"></script>
<%- include ../common/footer %>